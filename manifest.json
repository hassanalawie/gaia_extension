{
  "manifest_version": 3,
  "name": "Gaia",
  "version": "1.0",
  "description": "Monitors and displays request/response payloads for ChatGPT conversations.",
  "permissions": ["debugger", "storage", "tabs"],
  "host_permissions": ["https://chatgpt.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Monitor"
  }
}
